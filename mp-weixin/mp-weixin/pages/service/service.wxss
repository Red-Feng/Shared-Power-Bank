.serviceContainer {
  height: 100vh;
  display: flex;
  flex-direction: column;
  background-color: #f5f5f5;
}

/* 消息列表区域 */
.messageList {
  flex: 1;
  padding: 20rpx;
  overflow-y: auto;
}

.messageItem {
  margin-bottom: 30rpx;
}

/* AI消息样式（左侧） */
.aiMessage {
  display: flex;
  align-items: flex-start;
  justify-content: flex-start;
}

.aiAvatar {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  margin-right: 20rpx;
  flex-shrink: 0;
}

.aiBubble {
  background-color: #ffffff;
  max-width: 500rpx;
  border-radius: 12rpx 12rpx 12rpx 0;
  padding: 20rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
  position: relative;
}

.aiBubble::before {
  content: '';
  position: absolute;
  left: -12rpx;
  bottom: 0;
  width: 0;
  height: 0;
  border: 12rpx solid transparent;
  border-right-color: #ffffff;
  border-bottom: none;
}

.messageTime {
  font-size: 20rpx;
  color: #999;
  margin-left: 20rpx;
  align-self: flex-end;
  padding-bottom: 8rpx;
}

/* 用户消息样式（右侧） */
.userMessage {
  display: flex;
  align-items: flex-start;
  justify-content: flex-end;
}

.userBubble {
  background-color: #00D3D0;
  max-width: 500rpx;
  border-radius: 12rpx 12rpx 0 12rpx;
  padding: 20rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 211, 208, 0.3);
  position: relative;
}

.userMessage .messageTime {
  margin-left: 0;
  margin-right: 20rpx;
  padding-bottom: 8rpx;
}

.userBubble::after {
  content: '';
  position: absolute;
  right: -12rpx;
  bottom: 0;
  width: 0;
  height: 0;
  border: 12rpx solid transparent;
  border-left-color: #00D3D0;
  border-bottom: none;
}

.messageText {
  font-size: 28rpx;
  color: #333;
  line-height: 1.5;
  word-wrap: break-word;
}

.userBubble .messageText {
  color: #ffffff;
}

/* 输入区域（底部固定） */
.inputArea {
  display: flex;
  align-items: center;
  padding: 20rpx;
  background-color: #ffffff;
  border-top: 1rpx solid #e5e5e5;
  box-shadow: 0 -2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.inputBox {
  flex: 1;
  height: 70rpx;
  padding: 0 20rpx;
  background-color: #f5f5f5;
  border-radius: 35rpx;
  font-size: 28rpx;
  margin-right: 20rpx;
}

.sendBtn {
  width: 120rpx;
  height: 70rpx;
  line-height: 70rpx;
  background-color: #00D3D0;
  color: #ffffff;
  border-radius: 35rpx;
  font-size: 26rpx;
  padding: 0;
  border: none;
}

.sendBtn.sending {
  background-color: #cccccc;
  color: #999999;
}

.sendBtn::after {
  border: none;
}
