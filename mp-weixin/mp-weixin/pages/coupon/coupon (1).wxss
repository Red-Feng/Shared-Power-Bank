.couponContainer {
  min-height: 100vh;
  background-color: #f5fbff;
  padding: 40rpx 30rpx 60rpx 30rpx;
  box-sizing: border-box;
}

/* 顶部标题栏 */
.couponHeader {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 40rpx;
}

.backArrow {
  font-size: 36rpx;
  color: #333;
}

.headerTitle {
  font-size: 32rpx;
  font-weight: 500;
  color: #000;
}

.headerRight {
  display: flex;
  align-items: center;
  gap: 20rpx;
}

.headerRight text {
  font-size: 26rpx;
  color: #666;
}

/* 顶部 tab */
.tabBar {
  display: flex;
  justify-content: center;
  gap: 80rpx;
  margin-bottom: 20rpx;
}

.tabItem {
  align-items: center;
  justify-content: center;
  display: flex;
  flex-direction: column;
  font-size: 28rpx;
  color: #666;
}

.tabActive {
  color: #000;
  font-weight: 500;
}

.tabUnderline {
  width: 60rpx;
  height: 6rpx;
  border-radius: 3rpx;
  background-color: #000;
  margin-top: 8rpx;
}

/* 区块标题与卡片 */
.section {
  margin-top: 30rpx;
}

.sectionTitle {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 16rpx;
}

.card {
  background-color: #ffffff;
  border-radius: 24rpx;
  padding: 24rpx 24rpx 30rpx 24rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.06);
}

.cardHeader {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
}

.cardIconBox {
  width: 60rpx;
  height: 60rpx;
  border-radius: 16rpx;
  background-color: #e3f2fd;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 16rpx;
}

.phoneIconBox {
  background-color: #e3f7ff;
}

.cardIcon {
  width: 40rpx;
  height: 40rpx;
}

.cardHeaderText {
  font-size: 30rpx;
  font-weight: 500;
  color: #000;
}

/* 券码输入行 */
.codeInputRow {
  height: 90rpx;
  border-radius: 20rpx;
  border: 1rpx solid #dde4e6;
  background-color: #f8fbfc;
  display: flex;
  align-items: center;
  padding: 0 24rpx;
  margin-bottom: 20rpx;
}

.codeInput {
  flex: 1;
  font-size: 28rpx;
  color: #333;
}

.placeholder {
  color: #c0d0d5;
}

.codeDivider {
  width: 2rpx;
  height: 40rpx;
  background-color: #dde4e6;
  margin: 0 20rpx;
}

.pasteText {
  font-size: 26rpx;
  color: #999;
}

.primaryBtn {
  width: 100%;
  height: 90rpx;
  line-height: 90rpx;
  border-radius: 24rpx;
  margin-top: 10rpx;
  font-size: 30rpx;
  background-color: #e1ecff;
  color: #316aff;
}

.primaryBtn::after {
  border: none;
}

.descRow {
  margin-top: 16rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  color: #999;
  font-size: 24rpx;
}

.descText {
  margin-right: 6rpx;
}

.descArrow {
  font-size: 22rpx;
}

/* 第二张卡片 */
.secondCard {
  margin-top: 10rpx;
}

.phoneRow {
  height: 90rpx;
  border-radius: 20rpx;
  border: 1rpx solid #dde4e6;
  background-color: #f8fbfc;
  display: flex;
  align-items: center;
  padding: 0 24rpx;
  margin-bottom: 20rpx;
}

.phoneInput {
  flex: 1;
  font-size: 28rpx;
  color: #333;
}

.phoneDivider {
  width: 2rpx;
  height: 40rpx;
  background-color: #dde4e6;
  margin: 0 20rpx;
}

.getPhoneText {
  font-size: 26rpx;
  color: #7f8c8d;
}

.activateBtn {
  width: 200rpx;
  height: 80rpx;
  line-height: 80rpx;
  border-radius: 24rpx;
  font-size: 28rpx;
  background-color: #3178ff;
  color: #ffffff;
  align-self: flex-end;
}

.activateBtn::after {
  border: none;
}


