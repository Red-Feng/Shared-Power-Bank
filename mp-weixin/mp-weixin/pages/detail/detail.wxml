<view class="detailContainer">
  <!-- 顶部图片区域 -->
  <view class="top">
    <image 
      src="{{a}}" 
      mode="" 
      style="width:100%;height:100%"
    ></image>
  </view>

  <!-- 主体信息区域 -->
  <view class="main">
    <view class="title">{{b}}</view>
    <view class="address"> 地址：{{c}}</view>
    <view class="time"> 营业时间：{{d}}</view>
    <view class="content"> 计费：{{e}}</view>

    <!-- 使用与归还信息 -->
    <view class="useback">
      <image 
        class="usebackImg" 
        src="/static/images/电池.png" 
        mode=""
      ></image>
      <text class="use">{{f}}</text>
      <text class="back">{{g}}</text>
    </view>

    <!-- 功能按钮区域 -->
    <view class="btns">
      <view class="leftBtn" bindtap="{{h}}"> 扫码充电 </view>
      <view class="rightBtn"> 去这里约{{i}}m </view>
    </view>

    <view class="bottom"> 附近门店丨门店报错 </view>
  </view>

  <!-- 扫码遮罩层（条件渲染） -->
  <view wx:if="{{j}}" class="maskContainer">
    <view class="content"> 正在扫码，请不要关闭小程序 </view>
    <mask 
      class="mask" 
      bindclick="{{k}}" 
      u-i="262f38b3-0" 
      bind:__l="__l"
    ></mask>
  </view>
</view>