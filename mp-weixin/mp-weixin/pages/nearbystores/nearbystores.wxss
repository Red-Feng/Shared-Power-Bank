.nearContainer {
  height: 100%;
  background-color: #E8ECF2;
}
.nearContainer .map {
  height: 46%;
}
.nearContainer .list {
  border-radius: 50rpx;
  border-top: 5px solid #fff;
  height: 54%;
  box-sizing: border-box;
  background-color: #F5F5F5;
  padding-top: 20rpx;
}

/* 搜索框样式 */
.nearContainer .list .searchBox {
  display: flex;
  align-items: center;
  padding: 20rpx 30rpx;
  background-color: #fff;
  margin: 0 30rpx 20rpx;
  border-radius: 50rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.nearContainer .list .searchBox .searchInput {
  flex: 1;
  height: 70rpx;
  padding: 0 20rpx;
  font-size: 28rpx;
  background-color: #F5F5F5;
  border-radius: 35rpx;
  margin-right: 20rpx;
}

.nearContainer .list .searchBox .searchBtn {
  width: 120rpx;
  height: 70rpx;
  line-height: 70rpx;
  background-color: #00D3D0;
  color: #fff;
  border-radius: 35rpx;
  font-size: 26rpx;
  padding: 0;
  border: none;
}

.nearContainer .list .searchBox .searchBtn::after {
  border: none;
}
.nearContainer .list .item {
  padding: 30rpx;
  box-sizing: border-box;
  background-color: #fff;
  width: 90%;
  margin: 0 auto 20rpx;
  border-radius: 20rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.08);
}
.nearContainer .list .item.active {
  border: 2px solid #00D3D0;
  box-shadow: 0 4rpx 12rpx rgba(0, 211, 208, 0.2);
}
.nearContainer .list .item .itemTop {
  display: flex;
}
.nearContainer .list .item .itemTop .itemImg {
  width: 160rpx;
  height: 160rpx;
  border-radius: 15rpx;
  flex-shrink: 0;
  background-color: #f5f5f5;
}
.nearContainer .list .item .itemTop .itemMain {
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  flex: 1;
  margin: 0 20rpx;
  min-height: 160rpx;
}
.nearContainer .list .item .itemTop .itemMain .mainTitle {
  font-size: 30rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 10rpx;
}
.nearContainer .list .item .itemTop .itemMain .mainAddress {
  font-size: 24rpx;
  color: #999;
  margin-bottom: 8rpx;
  line-height: 1.4;
}
.nearContainer .list .item .itemTop .itemMain .mainTime {
  font-size: 24rpx;
  color: #666;
}
.nearContainer .list .item .itemTop .mainRight {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: flex-start;
  flex-shrink: 0;
}
.nearContainer .list .item .itemTop .mainRight .rightImg {
  width: 36rpx;
  height: 36rpx;
  margin-bottom: 8rpx;
}
.nearContainer .list .item .itemTop .mainRight .rightText {
  font-size: 24rpx;
  color: #999;
  font-weight: normal;
}
.nearContainer .list .item .itemBottom {
  display: flex;
  align-items: center;
  margin-top: 20rpx;
  padding-top: 20rpx;
  border-top: 1rpx solid #f0f0f0;
}
.nearContainer .list .item .itemBottom .bottomImg {
  width: 32rpx;
  height: 32rpx;
  margin-right: 10rpx;
}
.nearContainer .list .item .itemBottom text {
  font-size: 24rpx;
  font-weight: 500;
  color: #333;
}
.nearContainer .list .item .itemBottom text.use {
  margin-right: 30rpx;
  color: #00D3D0;
}
.nearContainer .list .item .itemBottom text.back {
  color: #00D3D0;
}